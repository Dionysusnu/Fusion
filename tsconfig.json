{
	"compilerOptions": {
		// required
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"downlevelIteration": true,
		"module": "commonjs",
		"moduleResolution": "Node",
		"noLib": true,
		"strict": true,
		"target": "es6",
		"typeRoots": ["node_modules/@rbxts"],

		// required, configurable
		"rootDir": "src",
		"baseUrl": "src",
		"outDir": "out",

		// optional, non-configurable
		"jsx": "react",
		"jsxFactory": "Fusion.createElement",
		"jsxFragmentFactory": "Fusion.createFragment"
	}
}
