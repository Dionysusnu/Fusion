{
	"include": ["./src"],
	"compilerOptions": {
		// required
		"allowSyntheticDefaultImports": true,
		"isolatedModules": false,
		"downlevelIteration": true,
		"module": "commonjs",
		"noLib": true,
		"strict": true,
		"target": "es6",
		"typeRoots": ["node_modules/@rbxts"],
		"moduleResolution": "node",
		// required, configurable
		"rootDir": "src",
		// do not define outDir, to ensure roblox-ts can't compile
		// optional
		"declaration": true,
		"incremental": false,
		// "tsBuildInfoFile": "out/tsconfig.tsbuildinfo",
		// optional, non-configurable
		"jsx": "react",
		"jsxFactory": "Fusion.createElement",
		// not roblox-ts specific
		"stripInternal": true,
		"exactOptionalPropertyTypes": true
	}
}
